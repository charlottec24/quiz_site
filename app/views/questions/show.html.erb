<h2>Question <p><%= @show_question.id %></p> </h2>

<p><%= @show_question.text %></p>

<%= form_for @answer do |f| %>
	<div> 
		<%= f.radio_button :value, "true" %>
		<%= f.label "true" %>
		<%= f.radio_button :value, "false" %>
		<%= f.label "false" %>
	</div>

	<div>
		<%= f.submit "Submit" %>
	</div>

<% end %>