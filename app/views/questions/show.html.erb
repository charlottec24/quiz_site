<h2>Question </h2>

<p><%= @show_question.text %></p>

<%= form_for @answer do |f| %>
	<%= f.hidden_field :question_id, @show_question.id %>
	<div> 
		<%= f.radio_button :answer, "true" %>
		<%= f.label "true" %>
		<%= f.radio_button :answer, "false" %>
		<%= f.label "false" %>
	</div>

	<div>
		<%= f.submit "Submit" %>
	</div>

<% end %>