<h2>Welcome to the Quiz!</h2>

<h2>Login</h2>
<%= form_for :user, :url => login_path do |f| %>
	<div>
		<%= f.label :user_name %>
		<%= f.text_field :user_name %>
	</div>
	<div>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
	<div>
		<%= f.submit "Login" %>
	</div>
<% end %>

<div>
	<a href='/signup'>Click here to Sign Up!</a>
</div>